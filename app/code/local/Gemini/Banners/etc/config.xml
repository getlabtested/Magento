<?xml version="1.0"?>
<config>
    <modules>
        <Gemini_Banners>
            <version>0.1.0</version>
        </Gemini_Banners>
    </modules>
    <frontend>
        <routers>
            <banners>
                <use>standard</use>
                <args>
                    <module>Gemini_Banners</module>
                    <frontName>banners</frontName>
                </args>
            </banners>
        </routers>
        <layout>
            <updates>
                <banners>
                    <file>banners.xml</file>
                </banners>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<banners>
				<use>admin</use>
				<args>
					<module>Gemini_Banners</module>
					<frontName>banners</frontName>
				</args>
			</banners>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<banners module="banners">
				<title>Banners</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="banners">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>banners/adminhtml_banners</action>
					</items>
				</children>
			</banners>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Gemini_Banners>
							<title>Banners Module</title>
							<sort_order>10</sort_order>
						</Gemini_Banners>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<banners>
					<file>banners.xml</file>
				</banners>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <banners>
                <class>Gemini_Banners_Model</class>
                <resourceModel>banners_mysql4</resourceModel>
            </banners>
            <banners_mysql4>
                <class>Gemini_Banners_Model_Mysql4</class>
                <entities>
                    <banners>
                        <table>banners</table>
                    </banners>
                </entities>
            </banners_mysql4>
        </models>
        <resources>
            <banners_setup>
                <setup>
                    <module>Gemini_Banners</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </banners_setup>
            <banners_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </banners_write>
            <banners_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </banners_read>
        </resources>
        <blocks>
            <banners>
                <class>Gemini_Banners_Block</class>
            </banners>
        </blocks>
        <helpers>
            <banners>
                <class>Gemini_Banners_Helper</class>
            </banners>
        </helpers>
    </global>
</config>